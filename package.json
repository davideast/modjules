{
  "name": "modjules-monorepo",
  "private": true,
  "type": "module",
  "version": "0.4.0",
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "description": "The agent-ready SDK for Jules.",
  "repository": "davideast/modjules",
  "scripts": {
    "build": "turbo run build --filter=modjules --filter=@modjules/auth --filter=@modjules/server --filter=@modjules/mcp --filter=@modjules/firebase",
    "build:all": "turbo run build",
    "test": "turbo run test --filter=modjules --filter=@modjules/auth --filter=@modjules/server --filter=@modjules/mcp --filter=@modjules/firebase",
    "test:all": "turbo run test",
    "type-check": "turbo run type-check --filter=modjules --filter=@modjules/auth --filter=@modjules/server --filter=@modjules/mcp --filter=@modjules/firebase",
    "type-check:all": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "precommit": "npm run format && npm run type-check && npm test",
    "test:browser": "vitest run -c vitest.browser.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:smoke": "tsx scripts/smoke-test.ts",
    "ci:report": "tsx scripts/ci-report.ts",
    "preflight": "tsx scripts/preflight.ts",
    "fix-attribution": "bun scripts/fix-attribution.ts",
    "verify": "tsx scripts/verify.ts",
    "prepare": "husky",
    "changeset": "changeset",
    "version:sync": "tsx scripts/sync-versions.ts",
    "prerelease": "npm run version:sync",
    "release": "changeset publish",
    "mcp-server": "bun packages/core/src/mcp/cli.ts",
    "monitor": "bun scripts/monitor.ts",
    "spec:pending": "grep -B2 'status: pending' spec/sync/cases.yaml | grep -E '^- id:|description:'",
    "spec:status": "echo 'ðŸ“Š Spec Status:' && echo 'Implemented:' $(grep -c 'status: implemented' spec/sync/cases.yaml) && echo 'Pending:' $(grep -c 'status: pending' spec/sync/cases.yaml) && echo 'Skipped:' $(grep -c 'status: skipped' spec/sync/cases.yaml)"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "**/*": "prettier --write ."
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "devDependencies": {
    "@ai-sdk/google": "^3.0.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@google/jules": "^0.1.37",
    "@inquirer/prompts": "^7.10.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@octokit/rest": "^22.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@types/google-apps-script": "^2.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "ai": "^6.0.5",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fake-indexeddb": "^6.2.5",
    "firebase-admin": "^13.6.0",
    "husky": "^9.1.7",
    "idb": "^8.0.3",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "msw": "^2.11.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.0.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "yaml": "^2.8.2"
  }
}
